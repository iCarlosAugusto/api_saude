datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

model User {
  id                String     @default(uuid()) @id
  createdAt         DateTime   @default(now())
  email             String     @unique
  password          String 
  photo             String?
  phoneNumber       String
  name              String
  consults          Consult[]

  @@map("users")
}

model Partner {
  id                String       @default(uuid()) @id
  createdAt         DateTime     @default(now())
  name              String
  email             String
  photo             String?
  password          String
  specialties       String
  address           String
  phoneNumber       String 
  servicePrice      String 
  jobDescription    String
  consults          Consult[]
  services          Service[]

  @@map("partners")
}


model Service {
  id                String        @default(uuid()) @id
  createdAt         DateTime      @default(now())
  name              String
  description       String
  price             String

  partnerId         String 
  partner           Partner       @relation(fields: [partnerId], references: [id])
  
  consult           Consult[]    

  @@map("services")
}

model Consult {
  id                String     @default(uuid()) @id
  createdAt         DateTime   @default(now())

  partnerId         String 
  partner           Partner    @relation(fields: [partnerId], references: [id])

  clientId          String
  client            User       @relation(fields: [clientId], references: [id])
  
  serviceId         String
  service           Service    @relation(fields: [serviceId], references: [id])
  
  isFinished        Boolean    @default(false)
  @@map("consults")
}