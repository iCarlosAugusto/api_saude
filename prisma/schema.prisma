datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                String     @default(uuid()) @id
  createdAt         DateTime   @default(now())
  email             String     @unique
  password          String 
  photo             String?
  phoneNumber       String
  name              String
  consults          Consult[]

  @@map("users")
}

model Partner {
  id                String       @default(uuid()) @id
  createdAt         DateTime     @default(now())
  name              String
  email             String
  photo             String?
  password          String
  specialties       String
  address           String
  phoneNumber       String 
  servicePrice      String 
  jobDescription    String
  consults          Consult[]

  @@map("partners")
}

model Consult {
  id          String     @default(uuid()) @id
  partnerId   String 
  partner     Partner    @relation(fields: [partnerId], references: [id])
  clientId    String
  client      User       @relation(fields: [clientId], references: [id])
  isFinished  Boolean    @default(false)
  @@map("consults")
}